<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

    <TextView
        android:id="@id/episodeItem_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/episodeItem_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff000000"/>

    <TextView
        android:id="@id/episodeItem_textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/episodeItem_textView_title"
        android:text="@string/episodeItem_number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff000000"/>

    <ImageButton
        android:id="@id/episodeItem_imageButton_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/eye"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>