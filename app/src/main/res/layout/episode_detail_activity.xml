<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@id/episodeDetail_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Épisode SSxEE - Titre"/>

    <TextView
        android:id="@id/episodeDetail_textView_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/episodeDetail_ratingBar_rating"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/episodeDetail_textView_title"
        android:layout_marginTop="38dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Il était une fois un petit épisode qui rêvait qu\'on le regarde…"/>

    <RatingBar
        android:id="@id/episodeDetail_ratingBar_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/episodeDetail_button_watched"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@id/episodeDetail_button_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/eye"
        android:drawableStart="@drawable/eye"
        android:text="@string/episodeDetailActivity_unmarkWatched"/>

</RelativeLayout>